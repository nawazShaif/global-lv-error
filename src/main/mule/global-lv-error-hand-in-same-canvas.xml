		<logger level="INFO" doc:name="Logger" doc:id="001bbead-dbfd-4fb1-972e-69cf4afb583b" />
		<ee:transform doc:name="Transform Message" doc:id="08683ee9-71cf-4ab2-87ab-a3eedcb0dfd1" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
