		<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="22ef165d-fb8d-45e9-8df3-fab058111943" >
			<logger level="INFO" doc:name="Logger" doc:id="59d7e5df-8644-48a4-8199-bdaef8a8b630" />
